<Page
    x:Class="AssignedAccessDesigner.Views.WizardStep6AccountsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Spacing="12">
        <TextBlock Text="Accounts and Groups" Style="{StaticResource TitleTextBlockStyle}" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Spacing="8">
            <Button Content="Add account" Click="Add_Click"/>
            <Button Content="Remove selected" Click="Remove_Click"/>
        </StackPanel>
            <ListView x:Name="AccountsList" Grid.Row="2" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollMode="Auto"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:LogonAccount" xmlns:models="using:AssignedAccessDesigner.Models">
                    <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,8,0,8">
                        <TextBox Header="Name/GUID" Width="400" Text="{x:Bind AccountName, Mode=TwoWay}"/>
                            <ComboBox x:Name="ProfileCombobox" ItemsSource="{x:Bind ProfileListIds}"  Header="Profile ID" SelectedValue="{x:Bind ProfileId, Mode=TwoWay}"/>
                            <ComboBox Width="125" Header="Type" SelectedValuePath="Content" SelectionChanged="typeChanged" SelectedValue="{x:Bind Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <ComboBoxItem Content="User" />
                            <ComboBoxItem Content="Group" />
                            <ComboBoxItem Content="AutoLogon" />
                            <ComboBoxItem Content="Global" />
                        </ComboBox>
                            <ComboBox x:Name="LocationCombo" Width="150" Header="Location" SelectedValuePath="Content" SelectedValue="{x:Bind Location, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <ComboBoxItem Content="Local" />
                            <ComboBoxItem Content="Active Directory" />
                            <ComboBoxItem Content="Entra ID" />
                        </ComboBox>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </StackPanel>
    </Grid>
</Page>