<Page
    x:Class="AssignedAccessDesigner.Views.WizardStep4TaskbarPinsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:AssignedAccessDesigner.Models" xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:viewmodels="using:AssignedAccessDesigner.ViewModels"
    >

    <Page.Resources>
        <DataTemplate x:Key="PickerItemTemplate" x:DataType="viewmodels:AppxPackage">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{x:Bind DisplayName}" />
                <TextBlock Text="{x:Bind FullName}" Foreground="Gray" FontSize="12" />
                <TextBlock Text="{x:Bind PublisherDisplayName}" Foreground="Gray" FontSize="12" />
            </StackPanel>
        </DataTemplate>
    </Page.Resources>


    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Enable Taskbar by Profile" Style="{StaticResource TitleTextBlockStyle}" />
            <StackPanel Orientation="Horizontal" Spacing="16">
                <ScrollViewer x:Name="ScrollViewerCB" Grid.Row="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" MaxWidth="1200" >
                    <muxc:ItemsRepeater
        x:Name="TaskbarEnabledListCheckboxes">
                        <muxc:ItemsRepeater.Layout>
                            <!-- Horizontal StackLayout gives horizontal flow -->
                            <muxc:StackLayout Orientation="Horizontal" Spacing="12"/>
                        </muxc:ItemsRepeater.Layout>

                        <!-- Each item template -->
                        <DataTemplate x:DataType="models:TaskbarEnabled">
                            <CheckBox
            Content="{x:Bind ProfileId}"
            Checked="Taskbar_Checked"
            Unchecked="Taskbar_Checked"
            IsChecked="{x:Bind IsTaskbarEnabled, Mode=TwoWay}"
            VerticalAlignment="Center"
            Margin="0,10,0,10"/>
                        </DataTemplate>
                    </muxc:ItemsRepeater>
                </ScrollViewer>

            </StackPanel>

            <TextBlock x:Name ="PinsListText" Text="Taskbar Pins" Style="{StaticResource TitleTextBlockStyle}" Margin="0,12,0,0"/>
       
            
            <StackPanel x:Name="AddRemoveButtons" Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Left" Spacing="8" Margin="0,12,0,0" Visibility="Collapsed">
                <Button x:Name="AddUWP" Content="Add UWP" Click="AddUwpApps_Click" />
                <Button x:Name="AddExplorer" Content="Add From Explorer" Click="AddFromExplorer_Click" />
                <Button Content="Add Manually" Click="Add_Click"/>
                <Button Content="Remove selected" Click="Remove_Click"/>
            </StackPanel>

            <ListView x:Name="tbPinsList" Grid.Row="3" SelectionMode="Single" Visibility="Collapsed" ScrollViewer.HorizontalScrollMode="Auto">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:TaskbarPin" xmlns:models="using:AssignedAccessDesigner.Models">
                        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,8,0,8">
                            <ComboBox x:Name="ProfileCombobox" ItemsSource="{x:Bind ProfileListIds}"  Header="Profile ID" SelectedValue="{x:Bind ProfileId, Mode=TwoWay}"/>
                                <TextBox Header="AUMID / Path" LostFocus="Path_LostFocus" MinWidth="600" Text="{x:Bind Path, Mode=TwoWay}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>


    </Grid>
</Page>