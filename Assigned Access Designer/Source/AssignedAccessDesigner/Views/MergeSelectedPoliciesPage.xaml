<Page
    x:Class="AssignedAccessDesigner.Views.MergeSelectPoliciesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Padding="24" Spacing="12">
        <TextBlock Text="Select Policies to Merge" Style="{StaticResource TitleTextBlockStyle}" />
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Add" Click="Add_Click"/>
                <Button Content="Remove" Click="Remove_Click"/>
            </StackPanel>
            <ListView x:Name="MergeList" SelectionMode="Single" Grid.Row="2" ScrollViewer.VerticalScrollMode="Auto">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:MergePolicy" xmlns:models="using:AssignedAccessDesigner.Models">
                        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,8,0,8" >
                            <TextBlock
                                Text="{x:Bind fileName, Mode=TwoWay}" 
                                MinWidth="500"
                                />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Page>