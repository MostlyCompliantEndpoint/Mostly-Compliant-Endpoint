<Page
    x:Class="AssignedAccessDesigner.Views.WizardStep1ModePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Padding="24" Spacing="16">
        <TextBlock Text="Select kiosk mode" Style="{StaticResource TitleTextBlockStyle}" />
        <StackPanel>
            <RadioButton x:Name="SingleRadio" Content="Single-app kiosk" Tag="SingleApp" Checked="Radio_Checked"/>
            <RadioButton x:Name="MultiRadio" Content="Multi-app kiosk" Tag="MultiApp" Checked="Radio_Checked"/>
        </StackPanel>
        <StackPanel x:Name="AddRemoveStack" Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Left" Spacing="8" Margin="0,12,0,0">
            <Button x:Name="AddButton" Content="Add Profile" Click="Add_Click"/>
            <Button x:Name="RemoveButton" Content="Remove selected" Click="Remove_Click"/>
        </StackPanel>
        <StackPanel x:Name="MultiAppSettings" Spacing="12" Orientation="Horizontal">
            <ListView x:Name="ProfilesList" SelectionMode="Single" Grid.Row="2" ScrollViewer.HorizontalScrollMode="Auto" ScrollViewer.VerticalScrollMode="Auto">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Profile" xmlns:models="using:AssignedAccessDesigner.Models">
                        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,8,0,8" >
                            <TextBox Header="Profile"
                                Text="{x:Bind ProfileId, Mode=TwoWay}" 
                                TextAlignment="Center"
                                IsReadOnly="True"
                                />
                            <TextBox Header="GUID"
                                Text="{x:Bind ProfileGuid, Mode=TwoWay}" 
                                MinWidth="300"
                                IsReadOnly="True"
                                />
                            <TextBox Header="Name"
                                 x:Name="ProfileNameTextbox"
                                 Text="{x:Bind ProfileName, Mode=TwoWay}" 
                                 MinWidth="500"
                                 />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </StackPanel>
</Page>