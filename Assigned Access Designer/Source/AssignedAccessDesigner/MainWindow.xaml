<Window
    x:Class="AssignedAccessDesigner.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:ui="using:Microsoft.UI.Xaml.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Assigned Access Policy Designer">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.15*"/>
            <ColumnDefinition Width="0.85*"/>
        </Grid.ColumnDefinitions>

        <!-- Left navigation rail -->
        <ui:NavigationView x:Name="NavView"
                           IsSettingsVisible="False"
                           PaneDisplayMode="Left"
                           IsPaneOpen="True"
                           IsPaneToggleButtonVisible="False"
                           PaneTitle="Steps"
                           Grid.Column="0"
                           >
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="Welcome" Tag="Welcome"/>
                <!-- <ui:NavigationViewItem Content="Merge" Tag="MergeSelect"/> -->
                <ui:NavigationViewItemSeparator/>
                <!-- Wizard steps reflect Create/Edit/Merge flows -->
                <ui:NavigationViewItem Content="Mode" Tag="Step1"/>
                <ui:NavigationViewItem Content="Apps" Tag="Step2"/>
                <ui:NavigationViewItem Content="Start Menu" Tag="Step3"/>
                <ui:NavigationViewItem Content="Taskbar" Tag="Step4"/>
                <ui:NavigationViewItem Content="Restrictions" Tag="Step5"/>
                <ui:NavigationViewItem Content="Accounts" Tag="Step6"/>
                <ui:NavigationViewItem Content="Save" Tag="Step7"/>
                <ui:NavigationViewItemSeparator/>
                <!--<ui:NavigationViewItem Content="Settings" Tag="Settings"/> -->
            </ui:NavigationView.MenuItems>
            
        </ui:NavigationView>

        <!-- Content area -->
        <Grid Grid.Column="1" Background="{ThemeResource SystemControlAcrylicWindowBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <InfoBar x:Name="GlobalValidationInfoBar"
             Title="Oops! You've entered something incorrectly..."
             Message="{x:Bind _policyVm.ValidationMessage, Mode=OneWay}"
             Severity="Error"
             IsOpen="False"
             Grid.Row="0"/>

            <Frame x:Name="ContentFrame" Grid.Row="1"/>

            <!-- Bottom navigation -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="3" Padding="0,15,15,15">
                <HyperlinkButton NavigateUri="https://learn.microsoft.com/en-us/windows/configuration/assigned-access/configuration-file?pivots=windows-11" Content="Assigned Access documentation"/>
                <Button x:Name="HelpButton" Content="Help" Click="HelpButton_Click"/>
            </StackPanel>
            <StackPanel x:Name="NavigationStack" Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="3" Margin="12" Padding="0,15,15,15">
                <Button x:Name="PrevButton" Content="Previous" Margin="0,0,8,0" Click="PrevButton_Click"/>
                <Button x:Name="NextButton" Content="Next" Click="NextButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>